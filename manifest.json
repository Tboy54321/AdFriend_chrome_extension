{
    "manifest_version": 3,
    "name": "AdFriend",
    "version": "1.0",
    
    "permissions": [
    "storage",
    "scripting",
    "activeTab"
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]

  }